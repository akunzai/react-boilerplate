{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "packageRules": [
    {
      "description": "Require typescript minor approval for typescript-eslint",
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["minor"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Update the worker file for msw",
      "matchPackageNames": [
        "msw"
      ],
      "postUpgradeTasks": {
        "commands": [
          "pwd"
        ],
        "fileFilters": [
          "public/mockServiceWorker.js"
        ]
      }
    }
  ]
}