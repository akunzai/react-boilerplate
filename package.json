{
  "name": "react-boilerplate",
  "version": "0.0.0",
  "scripts": {
    "start": "react-scripts start",
    "start:api": "yarn start:json-server && cross-env REACT_APP_TODO_URL=http://localhost:3001/todos react-scripts start",
    "start:json-server": "json-server server.js --port 3001 --quiet &",
    "poststart:api": "pkill -f json-server",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "i18n:extract": "i18next"
  },
  "private": true,
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "bootstrap": "5.0.1",
    "bootstrap-icons": "^1.5.0",
    "i18next": "^20.2.4",
    "i18next-browser-languagedetector": "^6.1.1",
    "i18next-http-backend": "^1.2.4",
    "react": "^17.0.2",
    "react-cool-onclickoutside": "^1.6.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.8.15",
    "react-router-dom": "^5.2.0",
    "react-service-container": "^0.2.6",
    "rxjs": "^7.0.1",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.0",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "@types/react-router-dom": "^5.1.7",
    "cross-env": "^7.0.3",
    "i18next-parser": "^4.0.1",
    "json-server": "^0.16.3",
    "node-sass": "^6.0.0",
    "react-scripts": "4.0.3",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.2.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
